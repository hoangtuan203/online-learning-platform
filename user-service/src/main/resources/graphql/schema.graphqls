type User {
    id: ID!
    username: String!
    name: String!
    email: String!
    role: Role!
    createdAt: String!
    updatedAt: String!
}
type UserPage {
    user: [User!]!
    totalElements: Int!
    totalPages: Int!
    currentPage: Int!
}

enum Role {
    STUDENT
    INSTRUCTOR
    ADMIN
}

input LoginInput {
    username: String!
    password: String!
}

type AuthResponse {
    accessToken: String!
    refreshToken: String!
    user: User!  # Bao gá»“m user info sau login
}
type Query {
    findAllUsers(page: Int = 0, size: Int = 10): UserPage!
    getUserById(id: ID!): User
}
type Mutation {
    addUser(username: String!,name: String!, email: String!, password: String!, role: Role!): User!,
    login(input: LoginInput!): AuthResponse!,
    forgotPassword(username: String!): User!
}

